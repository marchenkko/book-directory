{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Welcome to Book Management System</h1>
        <div class="d-flex flex-column">
            <a href="{{ path('author_create_form') }}" class="btn btn-primary mb-2">Create Author</a>
            <a href="{{ path('author_list') }}" class="btn btn-secondary mb-2">View All Authors</a>
            <a href="{{ path('book_create_form') }}" class="btn btn-primary mb-2">Create Book</a>
            <a href="{{ path('book_list') }}" class="btn btn-secondary mb-2">View All Books</a>
            <a href="{{ path('book_search_form') }}" class="btn btn-secondary mb-2">Search Books by Author's Last Name</a>
            <a href="{{ path('book_show_form') }}" class="btn btn-info mb-2">View Book Details</a>
            <a href="{{ path('book_edit_list') }}" class="btn btn-warning mb-2">Edit Book</a>
        </div>
    </div>
{% endblock %}
