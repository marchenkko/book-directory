{% extends 'base.html.twig' %}

{% block title %}Books by Author{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Books by {{ author.firstName }} {{ author.lastName }}</h1>
        <ul class="list-group">
            {% for book in books %}
                <li class="list-group-item">
                    <a href="{{ path('book_show', { 'id': book.id }) }}">{{ book.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
